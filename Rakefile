# -*- ruby -*-

require 'rubygems'
require 'hoe'

Hoe.plugin :bundler
Hoe.plugin :gemspec

Hoe.spec 'zenweb-haml' do
  developer('Mike Dalessio', 'mike.dalessio@gmail.com')

  self.readme_file  = 'README.md'
  self.history_file = 'CHANGELOG.md'

  self.extra_deps << ["haml",   ">= 0"]
  self.extra_deps << ["zenweb", ">= 3.0.0.b1"]
end

